<div class='container'>
    <div class="side-left"></div>
    <div class="side-right">
        {{#if passwordCheck}}
        <div class="box-errors">
            <h4>{{passwordCheck}}</h4>
        </div>
        {{/if}}
        {{#if emailCheckExists}}
        <div class="box-errors">
            <h4>{{emailCheckExists}}</h4>
        </div>
        {{/if}}
        {{#if errors}}
        <div class="box-errors">
            <h4>{{errors}}</h4>
        </div>
        {{/if}}
        {{#if usernameInvalid}}
        <div class="box-errors">
            <h4>{{usernameInvalid}}</h4>
        </div>
        {{/if}}
        <img src="/images/logo.svg" alt='logo'/>
        <h3>Créer votre compte</h3>
        <form method='POST' action='/signup'>
            <div>
                <input type='text' name="name" placeholder='Prénom' required/>
                <input type='text' name="familyName" placeholder='Nom de famille' required/>
            </div>
            <input type="date" id="birthday" name="birthdate" max="2007-01-02" min="1920-01-02" value="2007-01-02">
            <div class="box-radios">
                <div>
                    <input type="radio" name="gender" class="gender" value="Masculin">
                    <label for="Masculin">Masculin</label>
                </div>
                <div>
                    <input type="radio" name="gender"  class="gender" value="Feminin">
                    <label for="Feminin">Féminin</label>
                </div>
            </div>
            <input type='text' name="username" placeholder="Nom d'utilisateur" required/>
            <input type='tel' name="tel"  placeholder='Votre téléphone' required/>
            <input type='text' name="city" placeholder='Ville' required/>
            <input type='email'name="email"  placeholder='Votre email' required/>
            <input type='password' name="password" placeholder='Mot de passe' required/>
            <input type='password' name="passwordCheck" placeholder='Confirmer votre mot de passe' required/>
           <button type='submit' class="btn-signup">S'inscrire</button>
        </form>
           <a href="/login"><button type='submit' class="btn-connectUp">Se connecter</button></a>
    </div>
</div>